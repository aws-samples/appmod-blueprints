# The gateway handles Bedrock authentication via pod identity
LLM_GATEWAY_URL=http://litellm-proxy.agentgateway-system.svc.cluster.local:4000
LLM_GATEWAY_API_KEY=sk-1234

# MCP Servers (comma-separated URLs)
# MCP_SERVERS=http://mcp-server-1:3000,http://mcp-server-2:3001

# Server Configuration
PORT=8083
HOST=0.0.0.0
LOG_LEVEL=INFO
